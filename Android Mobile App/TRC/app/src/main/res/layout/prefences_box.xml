<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#454545"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp" >

        <Switch
            android:id="@+id/alerts_switch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:checked="true"
            android:text="@string/toggle_alerts"
            android:textSize="15dp"/>

        <Switch
            android:id="@+id/safety_switch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:checked="true"
            android:text="@string/all_relay_off"
            android:textSize="15dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r1et"
                android:layout_weight="1"
                android:text="Relay #1"
                android:textSize="15dp"
                android:maxLength="15"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r2et"
                android:layout_weight="1"
                android:text="Relay #2"
                android:textSize="15dp"
                android:maxLength="15"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r3et"
                android:layout_weight="1"
                android:text="Relay #3"
                android:textSize="15dp"
                android:maxLength="15"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r4et"
                android:layout_weight="1"
                android:text="Relay #4"
                android:textSize="15dp"
                android:maxLength="15"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r5et"
                android:layout_weight="1"
                android:text="Relay #5"
                android:textSize="15dp"
                android:maxLength="15"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r6et"
                android:layout_weight="1"
                android:text="Relay #6"
                android:textSize="15dp"
                android:maxLength="15"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r7et"
                android:layout_weight="1"
                android:text="Relay #7"
                android:textSize="15dp"
                android:maxLength="15"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/r8et"
                android:layout_weight="1"
                android:text="Relay #8"
                android:textSize="15dp"
                android:maxLength="15"/>

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i1et"
            android:layout_weight="1"
            android:text="Input 1"
            android:textSize="15dp"
            android:maxLength="15"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i2et"
            android:layout_weight="1"
            android:text="Input 2"
            android:textSize="15dp"
            android:maxLength="15"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i3et"
            android:layout_weight="1"
            android:text="Input 3"
            android:textSize="15dp"
            android:maxLength="15"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i4et"
            android:layout_weight="1"
            android:text="Input 4"
            android:textSize="15dp"
            android:maxLength="15"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i5et"
            android:layout_weight="1"
            android:text="Input 5"
            android:textSize="15dp"
            android:maxLength="15"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i6et"
            android:layout_weight="1"
            android:text="Input 6"
            android:textSize="15dp"
            android:maxLength="15"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i7et"
            android:layout_weight="1"
            android:text="Input 7"
            android:textSize="15dp"
            android:maxLength="15"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i8et"
            android:layout_weight="1"
            android:text="Input 8"
            android:textSize="15dp"
            android:maxLength="15"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_cancel"
            android:id="@+id/cancelBtn"
            android:layout_weight="1"
            android:onClick="onClickButton"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_ok"
            android:id="@+id/okBtn"
            android:layout_weight="1"
            android:onClick="onClickButton"/>

    </LinearLayout>


</LinearLayout>